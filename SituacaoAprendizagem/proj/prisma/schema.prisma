generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model professor{
  id Int @id @default(autoincrement())
  nome String
  email String
  senha String
  turmaId Int
  turma turma @relation("ensina", fields: [turmaId], references: [id])
}

model turma{
  id Int @id @default(autoincrement())
  nome String
  professor professor[] @relation("ensina")
  atividade atividade[] @relation("realiza")
}

model atividade{
  id Int @id @default(autoincrement())
  nome  String
  turmaId Int
  turma turma @relation("realiza", fields: [turmaId], references: [id])
}